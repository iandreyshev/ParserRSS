<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ViewFeedItem.MainLayout">
        <item name="android:padding">@dimen/FeedItem.Margin</item>
    </style>

    <style name="ViewFeedItem.TextLayout">
        <item name="android:layout_marginLeft">@dimen/FeedItem.Margin</item>
    </style>

    <style name="ViewFeedItem.Title">
        <item name="android:textSize">@dimen/FontSize.Normal</item>
    </style>

    <style name="ViewFeedItem.Date">
        <item name="android:textSize">@dimen/FontSize.ExtraSmall</item>
        <item name="android:layout_marginTop">@dimen/FeedItem.TextSpacing</item>
    </style>

    <style name="ViewFeedItem.Description">
        <item name="android:layout_marginTop">@dimen/FeedItem.TextSpacing</item>
        <item name="android:textSize">@dimen/FontSize.Small</item>
    </style>

</resources>