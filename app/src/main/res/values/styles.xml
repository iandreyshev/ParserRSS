<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/statusBarBackground</item>
        <item name="colorAccent">@color/accentDark</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryLightText</item>
    </style>

    <style name="AppBarCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">5dp</item>
        <item name="contentInsetEnd">2dp</item>
    </style>

    <style name="AddRssDialog" parent="AppTheme">
        <item name="colorAccent">@color/secondaryDarkText</item>
    </style>

    <style name="FeedTabsTheme" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/toolBarBackground</item>
        <item name="tabIndicatorColor">@color/tabsIndicator</item>
        <item name="tabSelectedTextColor">@color/primaryLightText</item>
        <item name="tabTextAppearance">@style/FeedTabTextAppearance</item>
    </style>

    <style name="FeedTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/secondaryLightText</item>
    </style>

    <style name="FeedProgressBarTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/secondaryLightText</item>
    </style>

    <style name="ActivityArticle"></style>

</resources>
